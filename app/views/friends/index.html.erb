<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>Instagram</th>
      <th>Profile</th>
    </tr>
  </thead>

<p style="color: white;"><%= notice %></p>
<h1>Friends List</h1>

<tbody>
  <% @friends.each do |friend| %>
  <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= friend.instagram %></td>
      <td><%= link_to friend.first_name+'_'+friend.last_name, friend %></td>
  </tr>
  <% end %>
</tbody>
</table>

<%= link_to "New friend", new_friend_path , class: "btn btn-outline-dark" %>


